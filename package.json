{
  "name": "angular-ci",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "serve:firebase": "firebase serve --only hosting,functions",
    "start": "run-p start:server start:client",
    "start:client": "ng serve --proxy-config proxy.conf.json --open",
    "start:server": "json-server --watch db.json --routes routes.json",
    "build": "ng build --prod",
    "deploy:staging": "npm run build && firebase use staging && firebase deploy",
    "deploy:prod": "npm run build && firebase use production && firebase deploy",
    "test": "ng test --single-run --code-coverage",
    "test:watch": "ng test --code-coverage",
    "ci": "ng test --single-run --code-coverage --progress=false",
    "lint": "ng lint",
    "precise-commits": "precise-commits",
    "precommit": "run-s lint precise-commits",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "chart.js": "^2.7.2",
    "core-js": "^2.4.1",
    "firebase-functions": "^1.0.1",
    "json-server": "^0.12.1",
    "rxjs": "^5.5.6",
    "semantic-ui-card": "^2.3.1",
    "semantic-ui-input": "^2.3.1",
    "semantic-ui-reset": "^2.3.1",
    "semantic-ui-table": "^2.3.1",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "~1.7.4",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "firebase-tools": "^3.18.2",
    "husky": "^0.14.3",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-spec-reporter": "0.0.32",
    "npm-run-all": "^4.1.2",
    "precise-commits": "^1.0.2",
    "prettier": "^1.11.1",
    "protractor": "~5.1.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.5.3"
  }
}
